<div class="profile_content">
  <div class="profile_left">
    <div class="profile_left_top">
      <p class="myname">@nishno</p>
      <div class="profile_follow_list">

        <div class="my_article">
          <p class="count"><%= @articles.count %></p>
          <p class="count_info">投稿</p>
        </div>

        <div class="my_follow">
          <p class="count">2</p>
          <p class="count_info">フォロー</p>
        </div>

        <div class="my_follower">
          <p class="count">2</p>
          <p class="count_info">フォロワー</p>
        </div>
      </div>

      <% if current_user.id == @user.id %>
        <%= link_to 'プロフィールを編集する', edit_user_path(current_user.id), class: 'profile_edit' %>
      <% end %>

    </div>
    <div class="profile_left_bottom">
      <div class="use_tag_list_title">
        <i class="fa fa-tags"></i>
        <p>使用しているタグ</p>
      </div>
      <div class="use_tag_lists">
        <a href="#">GitHub</a>
        <a href="#">Git</a>
        <a href="#">SQL</a>
        <a href="#">Rails</a>
        <a href="#">Ruby</a>
        <a href="#">PHP</a>
        <a href="#">javascript</a>
      </div>
    </div>
  </div>

  <div class="profile_right">
    <ul class="nav_menu">
      <li class="is_active">投稿</li>
      <li class="tab">いいね</li>
    </ul>
    <div class="nav_content">
      <div class="nav is_show">
        <% @articles.each do |article| %>
          <div class="nav_article_part">
            <p class="article_top">
              @
              <%= link_to "#{article.user.name}", user_path(article.user_id), class: 'article_top_user_name' %>
              が
              <%= article.created_at.strftime('%Y年%m月%d日') %>
              に投稿
            </p>
            <%= link_to article.title, article_path(article), class: 'article_part_link' %> 
            <div class="tag_list">
              <i class="fa fa-tags"></i>
              <% article.tag_name.split(',').each do |tag| %>
                <%= link_to "#{tag}", tag_path(tag), class: 'tag_list_link' %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
      <div class="nav"></div>
    </div>
  </div>
</div>
