<div class="profile_content">
    <%= render 'shared/profile_left', { articles: @articles, user: @user} %>

    <div class="profile_right">
        <div class="profile_right_title">
            <div class="profile_right_ten"></div>
            <p class="profile_p_title follower_list">フォロワー一覧</p>
        </div>
        
        <div class="profile_right_follower_list">
            <% if @users.present? %>
                <% @users.each do |user| %>
                    <div class="follower_list_main">
                        <p class="follower_name">@<%= link_to user.name, user_path(user) %></p>
                        <% if current_user.id != user.id %>
                            <% if current_user.following?(user) %>
                                <%= button_to 'フォロー外す', user_relationships_path(user.id), method: :delete, class: 'profile_edit arlreday_follow' %>
                            <% else %>
                                <%= button_to 'フォローする', user_relationships_path(user.id), method: :post, class: 'profile_edit' %>
                            <% end %>
                        <% end %>
                    </div>
                <% end %>
            <% else %>
                <p class="not_follower">フォロワーはいません</p>
            <% end %>
        </div>

    </div>
</div>
